{
  "name": "ts-node-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for Node.js projects with TypeScript",
  "author": "Ruslan Povolockii",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --no-notify src/main.ts",
    "start": "node dist/main.js",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts ."
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx)": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
